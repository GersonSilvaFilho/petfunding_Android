
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="85dp">
<android.support.v7.widget.CardView
    android:id="@+id/cardLikeList"
    android:layout_height="80dp"
    android:layout_width="fill_parent"
    android:focusable="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/cardview_shadow_start_color"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:padding="10dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userChildImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/add_image_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/nino"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_alignTop="@+id/userChildImage"
            android:layout_toRightOf="@+id/userChildImage"
            android:layout_toEndOf="@+id/userChildImage">

            <TextView
                android:id="@+id/userChildNameTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:gravity="center_vertical"
                android:text="Nino"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/secondLine"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="Contato:Gerson"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    </RelativeLayout>